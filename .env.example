# AURORA_LIFE Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Application
# ============================================================================
APP_ENV=development  # development, staging, production
APP_DEBUG=1
SECRET_KEY=your-secret-key-here-change-in-production
API_PORT=8000

# ============================================================================
# Database
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=aurora_life
POSTGRES_USER=aurora
POSTGRES_PASSWORD=your-postgres-password
DATABASE_URL=postgresql+asyncpg://aurora:your-postgres-password@postgres:5432/aurora_life

# ============================================================================
# Redis
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:your-redis-password@redis:6379/0

# ============================================================================
# API URLs
# ============================================================================
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================================================
# OAuth Providers
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================================================
# Email (SendGrid)
# ============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@auroralife.app
SENDGRID_FROM_NAME=AURORA_LIFE

# ============================================================================
# AI/ML APIs
# ============================================================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# Celery (Background Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://:your-redis-password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:your-redis-password@redis:6379/0
CELERY_LOG_LEVEL=info
CELERY_WORKERS=4

# ============================================================================
# Flower (Celery Monitoring)
# ============================================================================
FLOWER_PORT=5555
FLOWER_USER=admin
FLOWER_PASSWORD=your-flower-password-CHANGE-THIS

# ============================================================================
# Qdrant (Vector Database)
# ============================================================================
QDRANT_HOST=qdrant
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=  # Optional, for cloud deployment

# ============================================================================
# External Integrations - Google Calendar
# ============================================================================
GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-calendar-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/v1/integrations/google_calendar/callback

# ============================================================================
# External Integrations - Fitbit
# ============================================================================
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret
FITBIT_REDIRECT_URI=http://localhost:8000/api/v1/integrations/fitbit/callback

# ============================================================================
# External Integrations - Oura Ring
# ============================================================================
OURA_CLIENT_ID=your-oura-client-id
OURA_CLIENT_SECRET=your-oura-client-secret
OURA_REDIRECT_URI=http://localhost:8000/api/v1/integrations/oura/callback

# ============================================================================
# External Integrations - Spotify
# ============================================================================
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://localhost:8000/api/v1/integrations/spotify/callback

# ============================================================================
# Payments (Stripe)
# ============================================================================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ============================================================================
# Monitoring & Logging
# ============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=aurora-life-backend

# ============================================================================
# Nginx
# ============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================================================
# Docker Registry (for CI/CD)
# ============================================================================
GITHUB_REPOSITORY=your-org/aurora_life
INSTALL_DEV=true  # Set to false in production
